        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
    <EditText
        android:id="@+id/etNombreCompleto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/tituloNombreCompleto"/>
            <TextView
                android:id="@+id/tvFechNac"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/etNombreCompleto"
                android:hint="@string/tituloFechaNac"/>

            <DatePicker
                android:id="@+id/dtFechaNac"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/tvFechNac"
                android:layout_below="@+id/tvFechNac"
                android:layout_centerHorizontal="true"
                android:layout_centerInParent="false"
                android:layout_centerVertical="false"
                android:clickable="true"
                android:datePickerMode="spinner"
                android:spinnersShown="true"
                android:splitMotionEvents="true"
                android:tag="@string/tituloFechaNac"
                tools:calendarViewShown="false"
                tools:labelFor="@+id/tvFechNac"
                android:layout_marginTop="15dp">

            </DatePicker>

    <EditText
        android:id="@+id/etTelefono"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dtFechaNac"
        android:inputType="phone"
        android:hint="@string/tituloTel"/>

    <EditText
        android:id="@+id/etEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etTelefono"
        android:inputType="textEmailAddress"
        android:hint="@string/tituloEmail"/>

            <TextView
                android:id="@+id/tituloDescripcion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/etEmail"
                android:textSize="20sp"
                android:layout_marginTop="10dp"
                android:hint="@string/tituloDescripcion"/>
    <EditText
        android:id="@+id/etDescripcion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tituloDescripcion"
        android:inputType="text"
       />


    <Button
        android:id="@+id/btnSiguiente"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/btnSiguiente"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="false"
        android:layout_below="@+id/etDescripcion"
        style="@style/Widget.AppCompat.Button.Colored" />
        </RelativeLayout>

    </ScrollView>
